<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".FragmentoRegistro" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/editCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo Registro"
            android:inputType="number"
            android:minHeight="48dp" />


        <EditText
            android:id="@+id/editPatente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Patente"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editDocVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Documentacion Vehiculo"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Fecha "
                android:inputType="datetime"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Fecha"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/ic_calendario"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Hora "
                android:inputType="datetime"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=" Hora"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/ic_hora"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema Direccion"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frenos"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdFreno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoFreno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neumaticos y llantas"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdNeumatico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoNeumatico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suspension"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdSuspension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoSuspension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alineacion"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdAlineacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoAlineacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kit de Seguridad"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinturon de Seguridad"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdCinturon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoCinturon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luces"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdLuces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoLuces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puertas"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdPuerta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoPuerta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vidrios"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdVidrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoVidrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tubo de escape"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdEscape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/rdNoEscape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado"
                    tools:ignore="TouchTargetSizeCheck" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gases"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp">

                <RadioButton
                    android:id="@+id/rdGases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptado" />

                <RadioButton
                    android:id="@+id/rdNoGases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazado" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgRegistro"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:padding="10dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomar Foto"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/ic_camara"/>

            <Button
                android:id="@+id/btnGuardarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar Foto"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/ic_guardarfoto"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Registro"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/ic_guardar"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>